<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bk"
		name="Elektronika - BK-0010/BK-0011(M)"
		version="1.0.0.18"
		provider-name="Eric A. Edwards, Leonid A. Broukhis, emestee, arcade-mini, phcoder">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
		<import addon="game.controller.elektronika.bk" version="1.0.0"/>
		<import addon="game.controller.mouse" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>bin|img|dsk|bkd</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>BSD</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.bk</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Elektronika - BK-0010/BK-0011(M) v1.0</summary>
		<description lang="da_DK">BK er en emulator til den sovjetiske Electronica BK-serie: БК-0010, БК-0010.01 og БК-0011(M).</description>
		<description lang="en_GB">BK is an emulator for the Soviet Electronica BK series: БК-0010, БК-0010.01, and БК-0011(M).</description>
		<description lang="zh_CN">BK 是苏联 Electronica BK 系列的仿真器：Бκ-0010、Бκ-0010.01 和 Бκ-0011（M）。</description>
	</extension>
</addon>
